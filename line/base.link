
load @drumwork/base/code/head/task/hook
  find task void
  find task bind-deck
  find task halt
  find task make-deck
  find task make-face
  find task make-host
  find task load
  find task save-seed
  find task read-seed

hook make
  note <Create a new deck repository>
  take name
  take lead
    lead <-t>
    lead <--title>
  take host
    lead <-a>
    lead <--author>
  take mark
    lead <-v>
    lead <--version>
  task make-deck

  hook deck
    note <Create a new deck repository>
    take name
    take lead
      lead <-t>
      lead <--title>
    take host
      lead <-a>
      lead <--author>
    take mark
      lead <-v>
      lead <--version>
    task make-deck

  hook face
    note <Create a person user>
    take name
    task make-face

  hook host
    note <Create an organization>
    take name
    task make-host

hook load
  note <Install a deck locally>
  take name
  task load

  hook deck
    note <Install a deck locally>
    take name
    task load

hook link
  note <Start the local system connected to the remote system>

  hook deck
    note <Share the deck with the base>

hook lock
  note <Login>
  take cite
    note <Email>
  take code, wait rise
    note <Password>
  task lock

  hook void
    note <Logout>
    take cite
    task lock-void

hook save
  hook seed
    note <Create an environment variable>
    take name
    take sift
    task save-seed

hook read
  hook seed
    note <Read environment variable>
    take name
    task read-seed

  hook note
    note <Tail the logs>

hook bind
  note <Publish latest version of deck>
  task bind-deck

  hook deck
    note <Publish latest version of deck>
    task bind-deck

hook halt
  note <Stop the system from running>
  task halt

hook mark
  take mark, like size
    mint mint-size
  task mark

hook move
  hook mark
    note <Bump to next version>
    take link
      like term
        case a
        case b
        case c
    task move-mark
