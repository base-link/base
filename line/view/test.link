
load @drumwork/dock/code/javascript/console
  find task log
load @drumwork/base/code/dock/browser
  find task make-base
  find task bind-view
  find task draw-view
load @drumwork/base/code/dock/browser
  find task make

task mount-example-view
  save b
    call make-base
  save frag
    call make
      bind type, loan view example
  call log
    bind message, loan frag
  call bind-view
    bind list, loan frag
    bind base, loan b
  call draw-view
    bind mesh, loan frag
  call log
    bind message, text <done>

view check
  mesh header
    mesh h2
      bind text, text <foo bar>
    mesh div
      mesh h3
        bind text, text <another>

view example
  mesh h1
    bind fill, text #xff0000
    bind text-fill, text <white>
    bind text, text <hello world>
    vibe hover
      bind fill, text #x00ff00
    hook click
      base event
      call log
        bind message, link event
  mesh check
